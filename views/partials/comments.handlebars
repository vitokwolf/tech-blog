<form>
  <div class="columns is-centered is-mobile">
    <div class="column is-three-quarters-mobile is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-third-fullhd">
      <h1 class="has-text-weight-medium is-size-5">Comments</h1>
      {{#each this}}
      <div>
        <h2 class="is-size-6 has-background-grey-light">Posted by {{user.username}} on
          {{format_date created_at}} </h2>
        <div>
          <p class="has-text-warning has-background-grey-dark">{{comment_text}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</form>